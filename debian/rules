#!/usr/bin/make -f
#防止系统存在多个QT版本请看下引用qt编译环境错误，定义使用的QT版本
export QT_SELECT := qt5
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


%:
	dh $@
#dh_auto_configure是自动执行autogen的脚本，qt使用qmake，需要覆盖并重写
override_dh_auto_configure:
	mkdir -p build
	qmake $(CURDIR)/SuperTabbar.pro -spec \
	linux-g++ CONFIG+=qtquickcompiler -o build/
#dh_auto_build默认使用make -j$(JOBS)，本例因为makefile目录不在源码根目录，因此覆盖并重写
override_dh_auto_build:
	make -C $(CURDIR)/build -j$(JOBS)

override_dh_auto_test:

override_dh_auto_install:
	mkdir -p $(CURDIR)/debian/top.yzzi.supertabbar/opt/apps/top.yzzi.supertabbar/files/
	mkdir -p $(CURDIR)/debian/top.yzzi.supertabbar/opt/apps/top.yzzi.supertabbar/entries/icons/hicolor/scalable/apps/
	mkdir -p $(CURDIR)/debian/top.yzzi.supertabbar/opt/apps/top.yzzi.supertabbar/entries/applications
	cp $(CURDIR)/debian/supertabbar.info $(CURDIR)/debian/top.yzzi.supertabbar/opt/apps/top.yzzi.supertabbar/info
	cp $(CURDIR)/build/SuperTabbar $(CURDIR)/debian/top.yzzi.supertabbar/opt/apps/top.yzzi.supertabbar/files/
	cp $(CURDIR)/debian/top.yzzi.supertabbar.svg $(CURDIR)/debian/top.yzzi.supertabbar/opt/apps/top.yzzi.supertabbar/entries/icons/hicolor/scalable/apps/top.yzzi.supertabbar.svg
	cp $(CURDIR)/debian/top.yzzi.supertabbar.desktop $(CURDIR)/debian/top.yzzi.supertabbar/opt/apps/top.yzzi.supertabbar/entries/applications/

override_dh_installdocs:

override_dh_installchangelogs:

override_dh_makeshlibs:

# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
#override_dh_auto_configure:
